import java.util.*;  
class stringreverse  
{  
public static void main(String[] args)  
{  
Scanner sc= new Scanner(System.in);   
System.out.print("Enter a string: ");  
String str= sc.nextLine();
int len=str.length();
System.out.println("length:"+len);
for(int i=len;i>0;i--){
    System.out.print(str.charAt(i-1));
	}            
}  
}  
